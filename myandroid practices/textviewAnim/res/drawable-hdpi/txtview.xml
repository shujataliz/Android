<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" android:state_focused="true">
    <shape>
            <gradient 
            android:startColor="#f1f1f1"
            android:centerColor="#d9d9d9"
            android:endColor="#eaeaea"
            android:angle="270"
        />
        <stroke
            android:width="0.7dp"                
            android:color="#ffffff" /> 
         <corners
            android:radius="10dp" />
    </shape>
</item>

<item android:state_pressed="true" android:state_focused="false">
    <shape>
           <gradient 
            android:startColor="#f1f1f1"
            android:centerColor="#d9d9d9"
            android:endColor="#eaeaea"
            android:angle="270"
        />
        <stroke
            android:width="0.7dp"                
            android:color="#ffffff" /> 
        <corners
            android:radius="10dp" />       
    </shape>
</item>

<item android:state_pressed="false" android:state_focused="true">
    <shape>
           <gradient 
            android:startColor="#f1f1f1"
            android:centerColor="#d9d9d9"
            android:endColor="#eaeaea"
            android:angle="270"
        />
        <stroke
            android:width="0.7dp"                
            android:color="#ffffff" /> 
        
        <corners
            android:radius="10dp" />                          
    </shape>
</item>

<item android:state_pressed="false" android:state_focused="false">
    <shape>
        <gradient 
            android:startColor="#f1f1f1"
            android:centerColor="#d9d9d9"
            android:endColor="#eaeaea"
            android:angle="270"
        />
        <stroke
            android:width="0.7dp"                
            android:color="#ffffff" /> 
        <corners
            android:radius="10dp" />            
    </shape>
</item>

<item android:state_enabled="true">
    <shape>
        <padding 
                android:left="8dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
            />
    </shape>
</item>

</selector>